<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <!-- Numele mesei -->
    <TextView
        android:id="@+id/textViewMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <!-- Calorii -->
    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: 0 kcal"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Proteine -->
    <TextView
        android:id="@+id/textViewProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein: 0 g"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Carbohidrați -->
    <TextView
        android:id="@+id/textViewCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs: 0 g"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Grăsimi -->
    <TextView
        android:id="@+id/textViewFats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fats: 0 g"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Data mesei -->
    <TextView
        android:id="@+id/textViewMealDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: YYYY-MM-DD"
        android:textSize="14sp"/>

</LinearLayout>
